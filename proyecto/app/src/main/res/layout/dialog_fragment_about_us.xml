<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/groupTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/imgLogo"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/lblNombreApp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alquil"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblNombreApp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/lblVersion"
        android:text="Â© 2016 Todos los derechos reservados"/>

</RelativeLayout>