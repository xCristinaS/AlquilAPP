<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".activities.CrearAnuncio1Activity">

    <ImageView
        android:id="@+id/imgPrincipal"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/choose_image"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@id/imgPrincipal"
        android:layout_toStartOf="@id/imgPrincipal"
        android:layout_marginRight="16dp"
        android:src="@drawable/choose_image"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/img1"
        android:layout_toLeftOf="@id/imgPrincipal"
        android:layout_toStartOf="@id/imgPrincipal"
        android:layout_marginRight="16dp"
        android:src="@drawable/choose_image"/>

    <ImageView
        android:id="@+id/img5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imgPrincipal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/choose_image"/>

    <ImageView
        android:id="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imgPrincipal"
        android:layout_toLeftOf="@id/img5"
        android:layout_toStartOf="@id/img5"
        android:layout_marginRight="18dp"
        android:src="@drawable/choose_image"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imgPrincipal"
        android:layout_toLeftOf="@id/img4"
        android:layout_toStartOf="@id/img4"
        android:layout_marginRight="18dp"
        android:src="@drawable/choose_image"/>

    <ImageView
        android:id="@+id/imgSiguiente"
        android:src="@drawable/flecha"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_alignBottom="@id/imgSiguiente"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/imgSiguiente"
        android:layout_toStartOf="@id/imgSiguiente"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>
