<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/default_user"/>

    <TextView
        android:id="@+id/lblPoblacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poblacion ejemplo"
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_marginTop="18dp"
        android:maxLength="20"
        />
    <TextView
        android:id="@+id/lblProvincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Cádiz"
        android:layout_alignBaseline="@id/lblPoblacion"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C:/La Loba"
        android:layout_below="@id/lblPoblacion"
        android:layout_alignLeft="@id/lblPoblacion"
        android:layout_alignStart="@id/lblPoblacion"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/lblNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblDireccion"
        android:text="44"
        android:layout_toRightOf="@id/lblDireccion"
        android:layout_toEndOf="@id/lblDireccion"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="200€"
        android:layout_alignBaseline="@id/lblDireccion"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>
</RelativeLayout>