<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background_selector">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/lblPoblacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_toRightOf="@id/imgAvatar"
        android:maxLength="20"
        android:text="Poblacion ejemplo" />

    <TextView
        android:id="@+id/lblProvincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblPoblacion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Cádiz" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lblPoblacion"
        android:layout_alignStart="@id/lblPoblacion"
        android:layout_below="@id/lblPoblacion"
        android:layout_marginTop="15dp"
        android:text="C:/La Loba" />

    <TextView
        android:id="@+id/lblNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblDireccion"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/lblDireccion"
        android:layout_toRightOf="@id/lblDireccion"
        android:text="44" />

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblDireccion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="200€" />
</RelativeLayout>